// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Department {
  id        String   @id @default(cuid())
  name      String   @unique
  code      String?  @unique
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id           String      @id @default(cuid())
  username     String      @unique
  password     String
  role         String      @default("user") // admin, user
  departmentId String?
  department   Department? @relation(fields: [departmentId], references: [id])
  pictureUrl   String?
  displayName  String?
  firstName    String?
  lastName     String?
  phoneNumber  String?
  email        String?
  projects     Project[]
  reports      Report[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}


model Project {
  id                String      @id @default(cuid())
  name              String 
  projectName       String? 
  agency            String 
  description       String? 
  budget            Decimal     @default(0)
  budgetSpent       Decimal     @default(0) 
  startDate         String 
  endDate           String
  fiscalYear        String
  status            String      @default("Not Started")
  progress          Decimal     @default(0)
  source            String? 
  targetGroup       String? 
  targetGroupAmount String?
  responsiblePerson String?
  
  // New fields from types.ts
  categoryId            String?
  category              ProjectCategory? @relation(fields: [categoryId], references: [id])
  developmentGuideline  String?
  governanceIndicator   String?
  annualTarget          String?
  objective             String?
  supportAgency         String?
  
  strategicPlanId       String?
  strategicPlan         StrategicPlan? @relation(fields: [strategicPlanId], references: [id])
  strategicGoalId       String?
  strategicGoal         StrategicGoal? @relation(fields: [strategicGoalId], references: [id])

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  indicators Indicator[]
  reports    Report[]

  lastUpdated DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProjectCategory {
  id          String   @id @default(cuid())
  name        String
  description String?
  fiscalYear  String?
  projects    Project[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StrategicPlan {
  id          String   @id @default(cuid())
  name        String
  fiscalYear  String
  description String?
  goals       StrategicGoal[]
  projects    Project[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StrategicGoal {
  id          String   @id @default(cuid())
  planId      String
  plan        StrategicPlan @relation(fields: [planId], references: [id], onDelete: Cascade)
  name        String
  description String?
  indicators  StrategicIndicator[]
  projects    Project[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StrategicIndicator {
  id                String   @id @default(cuid())
  goalId            String
  goal              StrategicGoal @relation(fields: [goalId], references: [id], onDelete: Cascade)
  name              String
  recommendedTarget String?
  unit              String?
  description       String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Indicator {
  id        String   @id @default(cuid())
  name      String
  target    String
  unit      String
  result    String?
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Report {
  id               String   @id @default(cuid())
  projectId        String
  project          Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId           String?
  user             User?    @relation(fields: [userId], references: [id])
  progress         Decimal
  budgetSpent      Decimal
  performance      String?
  issues           String?
  activities       String? // New field
  indicatorResults String? // Check if JSON is better, currently String
  submissionDate   String? // Store as string to match type
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model AuditLog {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  actor     String
  action    String
  target    String
  details   String?
  ip        String?
}
